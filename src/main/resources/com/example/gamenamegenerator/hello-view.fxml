<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="490.0" prefWidth="500.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.gamenamegenerator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Click the button to generate a game name">
      <font>
         <Font size="20.0" />
      </font></Label>
   <Button fx:id="TestButton" mnemonicParsing="false" onAction="#onGenerateButtonClick" text="Generate name">
      <font>
         <Font size="15.0" />
      </font>
   </Button>
   <CheckBox fx:id="spaceToggle" mnemonicParsing="false" text="Include space">
      <font>
         <Font size="14.0" />
      </font>
   </CheckBox>
</VBox>
